@using WebShop.WebUI.Models
@model OrdersListViewModel

@{
    ViewBag.Title = "Админ панель: детали заказа";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Детали заказа</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th class="text-right">Продукт</th>
                <th class="text-right">Цена</th>
                <th class="text-right">Количество</th>
                <th class="text-right">Итого</th>
            </tr>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td class="text-right">@item.Order.OrderId</td>
                    <td class="text-right">@item.Product.Name</td>
                    <td class="text-right">@item.Product.Price.ToString("#.## грн")</td>
                    <td class="text-right">@item.Quantity</td>
                    <td class="text-right">@((item.Quantity * item.Product.Price).ToString("#.## грн"))</td>
                </tr>
            }
        </table>
    </div>
</div>